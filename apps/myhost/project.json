{
  "name": "myhost",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/myhost/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "options": {
        "port": 4200
      },
      "dependsOn": ["typecheck"]
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "configurations": {
        "staging": {
          "args": ["--config=./rspack.config.sta.ts"]
        },
        "production": {
          "args": ["--config=./rspack.config.prd.ts"]
        }
      }
    }
  }
}
